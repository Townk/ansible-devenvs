{{ ansible_managed | comment }}

# Path setup
# ----------
if [ ! "$PATH" = "*{{ env.install.path }}/bin*" ]; then
    path=(
        "{{ env.install.path }}/bin"
        "$path[@]"
    )
fi

{% if env.shell.pre_init_hook is defined and env.shell.pre_init_hook -%}
# Pre-init hook
# -------------
{{ env.shell.pre_init_hook }}
{%- endif %}

# {{ env.name }} activation
# ---------------
{% if (ansible_distribution == "MacOSX" or ansible_distribution == "macOS") and ansible_distribution_version is version("10.14.0", ">=") %}
if [ -z $SDKROOT ]; then
    export SDKROOT=${SDKROOT:-{{ macOS_SDK_ROOT if macOS_SDK_ROOT is defined else "" }}}
fi
{% endif %}
export {{ env.name | upper }}_ROOT="{{ env.install.datapath }}/{{ env.name | lower }}"
eval "$({{ env.name | lower }} init -)"

{% if env.shell.post_init_hook is defined and env.shell.post_init_hook -%}
# Post-init hook
# --------------
{{ env.shell.post_init_hook }}
{% endif %}

##########################################
# Start of fzf default completion plugin

{{ env_completion_plugin_file }}

# End of fzf default completion plugin
